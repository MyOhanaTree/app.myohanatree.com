{
  "compilerOptions": {
    "types": ["vite/client"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "outDir": "dist",    
    "allowJs": true,
    "allowSyntheticDefaultImports": true,    
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types.d.ts"],
  "exclude": ["node_modules"]
}
